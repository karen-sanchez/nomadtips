<div class="container">
	<div class="row">
		<div class="col-lg-5 col-lg-offset-3 col-sm-6">
		<h1>Edit post</h1>

		<%= form_for @post, :url => post_path(@post) do |f| %>
		 <% if @post.errors.any? %>
		 <div id="error_explanation">
		  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
		  <ul>
		   <% @post.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		   <% end %>
		  </ul>
		 </div>
		 <% end %>

		 <%= f.file_field :image %>

		 <div class="selectpicker country">
		 	<%= f.label :Country %>
		 	<%= f.select :location, options_for_select(CS.countries.values.each), {}, class: "form-control" %>
		 	<!-- <%= f.select :location, options_for_select(CS.states('#holder.val()').values.each) %> -->
		 </div>

		 <div class="field">
		 	<%= f.label :Price %><br />
		 	<%= f.text_field :price, placeholder: "Price", class: "form-control" %>
		 </div>

		 <div class="selectpicker">
		 	<%= f.label :Rating %><br />
		 	<%= f.select(:rating, options_for_select([[1],[2],[3],[4],[5]]), {}, class: "form-control") %>
		 </div>

		 <div class="field">
		 <%= f.label :Description %><br />
		 <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
		 </div><br />

		 <%= f.hidden_field :user_id, value: @user_id %>

		 <div align="center">
		 	<%= f.submit "Update Post", class: "btn-lg btn-success" %>
		 </div>

		<% end %>
		</div>
	</div>
</div>  